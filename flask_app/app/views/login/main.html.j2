{% extends "layout.html.j2" %}
{% block content %}
  {% include "basic_header.html.j2" %}
  <div class="row mt-2">
  	<div class="col">
		To support the database, we need to keep a tally on how many and what kinds of users benefited from its services.<br />
		Therefore, we kindly ask you to sign up and provide your institutional information below (or login if you have already signed up).
  	</div>
  </div>
  <div class="row mt-2">
     <div class="col-3">
       <div class="h4 btn-info text-center mb-2">Existing users</div>
       <form method="post">
          <div class="form-group">
             <label>User Name</label>
             <input type="text" name="username" class="form-control" placeholder="User Name">
          </div>
          <div class="form-group">
             <label>Password</label>
             <input type="password" name="token" class="form-control" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
       </form>
     </div>
     <div class="col-9">
       <div class="h4 btn-info text-center mb-2">New users</div>
       <form method="post" action="{{ url_for('root.page') }}register">
          <div class="form-group">
             <label>User Name</label>
             <input type="text" name="username" class="form-control" placeholder="User Name">
          </div>
          <div class="form-group">
             <label>E-mail</label>
             <input type="text" name="email" class="form-control" placeholder="you@email.address">
          </div>
          <button type="submit" class="btn btn-primary">Sign up</button>
       </form>
     </div>
  </div>
{% endblock %}